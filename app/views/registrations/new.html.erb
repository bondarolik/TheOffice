<%= content_for :antiheader do %>
  <h2 class="mt-6 text-3xl font-bold tracking-tight text-gray-900">Sign Up</h2>
  <p class="mt-2 text-sm text-gray-600">
    Or
    <%= link_to "sign in into account", sign_in_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
    if you already have one.
  </p>  
<% end %>

<%= form_with(url: sign_up_path, class: "space-y-6") do |form| %>
  <% if @user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :email, class: "label-control" %>
    <div class="mt-2">
      <%= form.email_field :email, value: @user.email, required: true, autofocus: true, autocomplete: "email", class: "form-input" %>
    </div>
  </div>

  <div class="space-y-1">
    <%= form.label :password, class: "label-control" %>

    <div class="mt-2">
      <%= form.password_field :password, required: true, autocomplete: "new-password", class: "form-input" %>
    </div>
    
    <div class="helper-text">6 characters minimum.</div>
  </div>

  <div class="space-y-1">
    <%= form.label :password_confirmation, class: "label-control" %>

    <div class="mt-2">
      <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", class: "form-input" %>
    </div>
  </div>

  <div class="flex items-center justify-between">
    <div class="text-sm">
      <%= link_to "Forgot your password?", new_identity_password_reset_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
    </div>            
  </div>

  <div>
    <%= form.submit "Sign Up", class: "btn-submit" %>
  </div>
<% end %>