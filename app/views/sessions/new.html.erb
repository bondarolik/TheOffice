<%= content_for :antiheader do %>
  <h2 class="mt-6 text-3xl font-bold tracking-tight text-gray-900">Sign in to your account</h2>
  <p class="mt-2 text-sm text-gray-600">
    Or
    <%= link_to "open your business account", sign_up_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
  </p>  
<% end %>

<%= form_with(url: sign_in_path, class: "space-y-6") do |form| %>
  <div>
    <%= form.label :email, class: "label-control" %>
    <div class="mt-2">
      <%= form.email_field :email, value: params[:email_hint], required: true, autofocus: true, autocomplete: "email", class: "form-input" %>
    </div>
  </div>

  <div class="space-y-1">
    <%= form.label :password, class: "label-control" %>

    <div class="mt-2">
      <%= form.password_field :password, required: true, autocomplete: "current-password", class: "form-input" %>
    </div>
  </div>

  <div class="flex items-center justify-between">
    <div class="text-sm">
      <%= link_to "Forgot your password?", new_identity_password_reset_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
    </div>            
  </div>

  <div>
    <%= form.submit "Sign in", class: "btn-submit" %>
  </div>
<% end %>
