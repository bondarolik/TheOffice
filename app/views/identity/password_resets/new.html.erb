<%= content_for :antiheader do %>
  <h2 class="mt-6 text-3xl font-bold tracking-tight text-gray-900">Forgot your password?</h2>
  <p class="mt-2 text-sm text-gray-600">
    <%= link_to "Sign in into account", sign_in_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
    or
    <%= link_to "open a new one", sign_up_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>.
  </p>  
<% end %>

<%= form_with(url: identity_password_reset_path, class: "space-y-6") do |form| %>

  <div>
    <%= form.label :email, class: "label-control" %>
    <div class="mt-2">
      <%= form.email_field :email, required: true, autofocus: true, autocomplete: "email", class: "form-input" %>
    </div>
  </div>

  <div>
    <%= form.submit "Send password reset email", class: "btn-submit" %>
  </div>
<% end %>
